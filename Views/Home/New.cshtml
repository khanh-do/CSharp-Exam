@model MeetUp

<h1>Dojo Activity Center</h1>
<a href="/dashboard"><button>Home</button></a><a href="/logout"><button>Log Out</button></a>
<h2>Create an Activity</h2>

<form asp-action="Create" asp-controller="Home" method="post">
    <span asp-validation-for="Title"></span>
    <label asp-for="Title"></label>
    <input asp-for="Title"><br>

    <span asp-validation-for="Date"></span>
    <label asp-for="Date"></label>
    <input asp-for="Date"><br>

    <span asp-validation-for="Duration"></span>
    <label asp-for="Duration"></label>
    <input asp-for="Duration"><br>

    <span asp-validation-for="Description"></span>
    <label asp-for="Description"></label>
    <textarea asp-for="Description" rows="2" cols="20"></textarea><br>

    <input asp-for="UserId" type="hidden" value="@ViewBag.UserId">

    <input type="submit" value="Create Activity">
</form>